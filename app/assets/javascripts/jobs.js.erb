		var idContainer = this.id;
		$('#jobs-list-hidden-' + idContainer).slideToggle("fast");
		console.log('hello');
	});

	$('.login-collapse').click(function(){
		var idContainer = this.id;
		$('#collapse-' + idContainer).slideToggle("fast");
	});
