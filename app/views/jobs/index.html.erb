<!-- Search by country -->
<div class="home-hero col-xs-12 col-sm-12 col-md-12 col-lg-12">
	<div class="home-hero-content">
		<h1>#GONOW</h1>
	</div>
</div>

<div class="col-xs-6 col-xs-offset-3 col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3 ">	
	<%= search_form_for @search, :html => {:class => "form-inline"} do |f| %>
		<div>
			<%= f.select(:country_id_cont, options_for_select(@countries_uniq), {include_blank: "All"}, {:class => 'form-control'}) %>
			<%= f.submit "Search", class: :"btn btn-warning" %>
		</div>
	<% end %>
</div >

<!-- Results -->
<div class="jobs-list col-xs-12 col-sm-12 col-md-10 col-md-offset-1 col-lg-10 col-lg-offset-1">
	<% @jobs.each do |job| %>
		<div class="jobs-list-container col-xs-12 col-sm-12 col-md-12 col-lg-12" id="<%= job.id %>">
			<div class="jobs-list-header col-xs-12 col-sm-12 col-md-12 col-lg-12">
		   		<h4><%= link_to job.title, job_path(job) %></h4>
			    <h4><%= job.description %></h4>
			    <h4><i class="fa fa-map-marker"></i> <%= job.city_id %>, <%= job.country_id %></h4>
			</div>
			<div class="jobs-list-body jobs-list-title col-xs-12 col-sm-12 col-md-12 col-lg-12" id="jobs-list-hidden-<%= job.id%>">
				<div class="jobs-list-title col-xs-12 col-sm-12 col-md-3 col-lg-3">
			    	<h4>Qualifications</h4>
			    </div>
			    <div class="jobs-list-content col-xs-12 col-sm-12 col-md-9 col-lg-9">
			    	<h4><%= simple_format job.qualifications %></h4>
			    </div>
			    <div class="jobs-list-title col-xs-12 col-sm-12 col-md-3 col-lg-3">
			    	<h4>Benefits</h4>
			    </div>
			    <div class="jobs-list-content col-xs-12 col-sm-12 col-md-9 col-lg-9">
			    	<h4><%= simple_format job.benefits_description %></h4>
			    	<div class="jobs-list-benefits">

			    	</div>
			    </div>
				<div class="jobs-list-title col-xs-12 col-sm-12 col-md-3 col-lg-3">
			    	<h4>Additional Info</h4>
			    </div>
			    <div class="jobs-list-content col-xs-12 col-sm-12 col-md-9 col-lg-9">
			    	<h4><%= simple_format job.additional_info %></h4>
			    </div>
			    <div class="jobs-list-title col-xs-12 col-sm-12 col-md-3 col-lg-3">
			    	<h4>How To Apply</h4>
			    </div>
			    <div class="jobs-list-content col-xs-12 col-sm-12 col-md-9 col-lg-9">
			    	<h4><%= simple_format job.how_to %></h4>
			    </div>
<!-- 			    <h4>Airfare <%= job.benefits_airfare %></h4>
			    <h4>Housing <%= job.benefits_housing %></h4>
			    <h4>Medical <%= job.benefits_medical %></h4>
			    <h4>PTO <%= job.benefits_pto %></h4>
			    <h4>Sick <%= job.benefits_sick %></h4> -->
			</div>
	    </div>
	<% end %>
</div>

<%= will_paginate @jobs %>