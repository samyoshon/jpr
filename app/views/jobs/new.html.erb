<div class="login col-xs-12 col-sm-12 col-md-12 col-lg-12"> 
	<div class="login-container col-xs-12 col-sm-12 col-md-6 col-lg-6">
		<%= form_for @job do |f| %>
		  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
		   <%= f.label :title, "Job Title" %>
		   <%= f.text_field :title, :size => 40, class: "form-control login-form" %>
		  </div>
		  
		  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
		   <%= f.label :description, "Job Description"	 %>
		   <%= f.text_area :description, class: "form-control login-form" %>
		  </div>

		  <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
		   <%= f.label :city_id, "City" %>
		   <%= f.text_field :city_id, :size => 40, class: "form-control login-form" %>
		  </div>

		  <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
		   <%= f.label :country_id, "Country" %>
		   <%= f.country_select(:country_id, {prompt: "Select a Country"}, {class: "form-control login-form"}) %>
		  </div>

		  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
		   <%= f.label :qualifications, "Qualifications" %>
		   <%= f.text_area :qualifications, class: "form-control login-form"  %>
		  </div>

		  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
		   <%= f.label :benefits_description, "Benefits" %>
		   <%= f.text_area :benefits_description, class: "form-control login-form"  %>
		  </div>

		  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
		   <%= check_box :job, :benefits_airfare %>
		   <%= f.label :benefits_airfare, "Subsidized Airfare" %>
		  </div>

		  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
		   <%= check_box :job, :benefits_housing %>
		   <%= f.label :benefits_housing, "Subsidized Housing" %>
		  </div>

		  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
		   <%= check_box :job, :benefits_medical%>
		   <%= f.label :benefits_medical, "Medical Insurance" %>
		  </div>

		  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
		   <%= check_box :job, :benefits_pto %>
		   <%= f.label :benefits_pto, "Paid Vacation Days" %>
		  </div>
		  
		  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
		   <%= check_box :job, :benefits_sick %>
		   <%= f.label :benefits_sick, "Paid Sick Days" %>
		  </div>

		  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
		   <%= f.label :additional_info, "Additional Information" %>
		   <%= f.text_area :additional_info, class: "form-control login-form"  %>
		  </div>

		  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
		   <%= f.label :how_to, "How To Apply" %>
		   <%= f.text_area :how_to, class: "form-control login-form"  %>
		  </div>		  

		  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
		   <%= f.submit "Post Job", class: :"btn btn-warning" %>
		  </div>
		<% end %>
	</div>
</div>