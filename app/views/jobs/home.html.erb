<div class="home-hero col-xs-12 col-sm-12 col-md-12 col-lg-12">
	<div class="home-hero-content">
		<h1>#GONOW</h1>
		<%= button_to 'Find Jobs Abroad', jobs_path, class: :"btn btn-default", method: :get %>
	</div>
</div>

<div class="home-checklist col-xs-12 col-sm-12 col-md-12 col-lg-12">
	<div class="home-checklist-content">
		<p>Statement 1</p>
		<p>Statement 2</p>
		<p>Statement 3</p>
	</div>
</div>

