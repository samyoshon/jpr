			<div class="home-countries-single col-xs-12 col-sm-12 col-md-6 col-lg-6">Dubai</div>
			<div class="home-countries-single col-xs-12 col-sm-12 col-md-6 col-lg-6">Vietnam</div>
			<div class="home-countries-single col-xs-12 col-sm-12 col-md-6 col-lg-6">Indonesia</div>
		</div>
	</div>
</div>

<div class="home-testimonials col-xs-12 col-sm-12 col-md-12 col-lg-12">
	<div class="home-testimonials-content">
		<%= text_field :title, :size => 40 %>
		<%= label :title, "Job Title" %>
		<%= button_to "Stay Updated", class: :"btn btn-default"%>
	</div>
</div>