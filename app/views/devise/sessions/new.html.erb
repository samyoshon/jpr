<div class="login col-xs-12 col-sm-12 col-md-12 col-lg-12"> 
    <div class="login-container">
        <h2>Log in</h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.email_field :email, autofocus: true, class: "form-control login-form", placeholder: "Email" %>
          </div>

          <div class="field">
            <%= f.password_field :password, autocomplete: "off", class: "form-control login-form", placeholder: "Password" %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>

          <div class="actions">
            <%= f.submit "Log in", class: :"btn btn-warning btn-login"%>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
    </div>
</div>
