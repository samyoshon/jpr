<div class="login col-xs-12 col-sm-12 col-md-12 col-lg-12"> 
    <div class="login-container">	
		<h2>Resend Confirmation Instructions</h2>

		<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
			<%= devise_error_messages! %>

			<div class="field">
			<%= f.email_field :email, autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: "form-control login-form", placeholder: "Email"  %> 
			</div>

			<div class="actions">
			<%= f.submit "Resend Confirmation", class: :"btn btn-warning btn-login" %>
			</div>
		<% end %>

		<%= render "devise/shared/links" %>
	</div>
</div>