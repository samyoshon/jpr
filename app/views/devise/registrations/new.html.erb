<div class="login col-xs-12 col-sm-12 col-md-12 col-lg-12"> 
    <div class="login-container">
        <h2>Sign up</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>

            <div class="field">
              <%= f.email_field :email, autofocus: true, class: "form-control login-form", placeholder: "Email" %>
            </div>

            <div class="field">
              <%= f.label :password %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "off", class: "form-control login-form", placeholder: "Password" %>
            </div>

            <div class="field">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control login-form", placeholder: "Confirm Password" %>
            </div>

            <div class="actions">
              <%= f.submit "Sign up", class: :"btn btn-warning btn-login" %>
            </div>
        <% end %>

        <%= render "devise/shared/links" %>
    </div>
</div>
