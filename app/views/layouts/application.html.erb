<!DOCTYPE html>
<html>
<head>
	<title>JetPath | Go Now</title>
	<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'https://js.stripe.com/v2/', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>
	<%= tag :meta, name: "stripe-key", content: STRIPE_PUBLIC %>
	
	<link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
	<link href='https://fonts.googleapis.com/css?family=Lato:400,900' rel='stylesheet' type='text/css'>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
	<script type="text/javascript" src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>		
	<nav class="navbar navbar-inverse" role="navigation">
        	<div class="navbar-header">
          		<button type="button" class="navbar-toggle btn-navbar" data-toggle="collapse" data-target="#navbar-collapse-1" aria-expanded="false" aria-controls="navbar" id="navbar-hamburger">
		        	<span class="icon-bar"></span>
		            <span class="icon-bar"></span>
		            <span class="icon-bar"></span> 
          		</button>
          		<%= link_to image_tag("logo.png", border: 0), root_path, id: :"navbar-logo" %>
        	</div>
        <div class="collapse navbar-collapse" id="navbar-collapse-1">
         	<ul class="nav navbar-nav navbar-right">
	          	<% if user_signed_in? %>
	          		<li>
						<%= link_to "Search Jobs", jobs_path, :method => :get, class: :"btn-navbar" %>
					</li>
					<li>
						<%= link_to "Post A Job", new_job_path, :method => :get, class: :"btn-navbar" %>
					</li>
					<li class="dropdown-toggle btn-navbar" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
						<span><%= "#{current_user.name}" %> <i class="fa fa-caret-down"></i></span>
					</li>
			        <ul class="dropdown-menu">
						<li>
							<%= link_to "Edit Profile", edit_user_registration_path, class: :"btn-navbar" %>
						</li>
						<li role="separator" class="divider"></li>
						<li>
							<%= link_to "Logout", destroy_user_session_path, :method => :delete, class: :"btn-navbar" %>
						</li>
					</ul>
				<% else %>
					<li>
						<!-- jobs_path -->
						<%= link_to "Search Jobs", jobs_path, :method => :get, class: :"btn-navbar" %>
					</li>
					<li>
						<%= link_to "Employers", new_job_path, :method => :get, class: :"btn-navbar" %>
					</li>
				<% end %> 
			</ul>
        </div>
    </nav>

	<div class="home-flash">
    	<% if notice %>
    		<div class="bg-success"><%= notice %></div>
    	<% end %>
    	<% if alert %>
    	    <div class="bg-danger"><%= alert %></div>
    	<% end %>
   	</div>

	<%= yield %>

	<footer class="footer-container col-xs-12 col-sm-12 col-md-12 col-lg-12">
		<div class="footer-logo">
			<%= image_tag 'logo-b.png' %>
		</div>
		<div class="footer-title">
			<h4><i class="fa fa-copyright"></i> Jetpath Co.</h4>
		</div>
		<div class="footer-social">
			<a href="https://www.facebook.com/jetpathco" target="blank"><i class="fa fa-facebook-square"></i></a>
			<a href="https://www.instagram.com/jetpath_co/" target="blank"><i class="fa fa-instagram"></i></a>
			<a href="mailto:info@jetpath.co" target="blank"><i class="fa fa-envelope"></i></a>
		</div>
	</footer>

</body>
</html>
